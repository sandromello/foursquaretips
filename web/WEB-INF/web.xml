<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>fsquare.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>fsquare.auth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tipvenues</servlet-name>
        <servlet-class>fsquare.tipvenues</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>responsequery</servlet-name>
        <servlet-class>fsquare.responsequery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastro</servlet-name>
        <servlet-class>fsquare.cadastro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tipvenues</servlet-name>
        <url-pattern>/tipvenues</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>responsequery</servlet-name>
        <url-pattern>/responsequery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastro</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/foursquare</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
